<%- include("partials/header") %>
<div class="container">
    <h1 class = "text-center pt-5">Add new Shop</h1>
    <div class="container">
        <form action="/shops" method="post" class = "w-50 mx-auto pt-5">

            <label for="name" id = "name-label" class = 'text-muted'>Name</label>
            <div class="form-group">
                <input class = "form-control" type="text" name = "name" placeholder="Write Shop name" required>
            </div>

            <label for="category" id = "category-label" class = 'text-muted'>Category</label>
            <div class="form-group">
                <input class = "form-control" type="text" name = "category" placeholder="Write Category" required>
            </div>

            <div class="form-group d-flex flex-row justify-content-center mt-5">
                <input type = "submit" class = "btn btn-primary btn-lg" value = "Submit">
            </div>
        </form>
    </div>
</div>
<%- include("partials/footer") %>
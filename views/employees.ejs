<%- include("partials/header") %>
    <h1 class = "text-center pt-5">Airport Employee Data</h1>

    <table class="table">
        <thead class="thead-dark">
            <th scope='col'>Employee ID</th>
            <th scope='col'>Name</th>
            <th scope='col'>Department</th>
            <th scope='col'>Delete Employee</th>
        </thead>

        <% airportEmployees.forEach(empl => { %>
            <tr>
                <td><%= empl.e_id %></td>
                <td><%= empl.e_name %></td>
                <td><%= empl.d_name %></td>
                <td>
                    <form action="/employees/<%= empl.e_id %>?_method=DELETE" method="post">
                        <input type="submit" class = "btn btn-danger" value="Delete">
                    </form>
                </td>
            </tr>
        <% }) %>
    </table>

    <h1 class = "text-center pt-5">Airline Employee Data</h1>

    <table class="table">

            <th scope='col'>Name</th>
            <th scope='col'>Airline</th>
            <th scope='col'>Airline Department</th>
            <th scope='col'>Delete Employee</th>
        </thead>

        <% airlineEmployees.forEach(empl => { %>
            <tr>
                <td><%= empl.e_id %></td>
                <td><%= empl.e_name %></td>
                <td><%= empl.a_name %></td>
                <td><%= empl.d_name %></td>
                <td>
                    <form action="/employees/<%= empl.e_id %>?_method=DELETE" method="post">
                        <input type="submit" class = "btn btn-danger" value="Delete">
                    </form>
                </td>
            </tr>
        <% }) %>
    </table>
<%- include("partials/footer") %>